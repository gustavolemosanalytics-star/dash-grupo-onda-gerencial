{
  "name": "dash-grupo-onda-gerencial",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -n API,WEB -c yellow,cyan \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "cd backend && bash run.sh",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "build:frontend": "cd frontend && npm run build",
    "lint": "cd frontend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
